<p id="notice"><%= notice %></p>

<h1>Coins</h1>


<table class="table">
  <thead>
    <tr>
      <th>Moeda</th>
      <th>Sigla</th>
      <th>Imagem</th>
      <th>Criado em</th>
      <th>Atualizado em</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td>
           <%= image_tag coin.url_img, width:"25px", heigth:"25px"  %>
        </td>
        <td><%= l coin.created_at %></td>
        <td><%= l coin.updated_at %></td>

        <td><%= link_to 'Exibir', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Excluir', coin, method: :delete, data: { confirm: 'VocÃª tem certeza ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Moeda', new_coin_path, class:"btn btn-primary" %>
