<%= form_with(model: coin, local: true) do |form| %>

  <% if coin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
      <% coin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Descrição" %>
    <%= form.text_field :description, class:"form-control", placeholder:"Informe a Descrição" %>
  </div>

  <div class="form-group">
    <%= form.label "Acrônimo" %>
    <%= form.text_field :acronym, class:"form-control", placeholder:"Informe o Acrônimo"%>
  </div>

  <div class="form-group">
    <%= form.label "Localização da Imagem" %>
    <%= form.text_field :url_img, size:50, class:"form-control", placeholder:"Informe a localização da Imagem" %>
  </div>

  <div class="form-group">
    <%= form.label "Tipo de Mineração" %>
    <%= form.select("mining_type_id", @mining_type_options , {include_blank: "Selecione ..."}, class:"form-control") %>
  </div>

  <div class="actions">
    <%= form.submit nil, class:"btn btn-primary" %>
  </div>

<% end %>
