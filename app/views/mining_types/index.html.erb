<p id="notice"><%= notice %></p>

<h1>Mining Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to 'Mostrar', mining_type %></td>
        <td><%= link_to 'Editar', edit_mining_type_path(mining_type) %></td>
        <td><%= link_to 'Excluir', mining_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tipo de Mineração', new_mining_type_path, class:"btn btn-primary" %>
